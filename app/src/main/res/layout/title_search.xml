<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/search_background">
    <EditText
        android:layout_width="315dp"
        android:layout_height="42dp"
        android:id="@+id/titleSearchEdit"
        android:singleLine="true"
        android:background="@drawable/search_background2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="10dp"
        android:hint="  검색어를 입력해 주세요"
        android:textColorHint="@color/White"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="검색"
            android:id="@+id/buttonTitleSearch"
            android:onClick="buttonTitleSearch_OnClick"
            android:src="@drawable/button_search"
            android:background="@null" />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" />

    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_list">
    </ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색 결과가 없습니다."
        android:id="@+id/titlenotsearch"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textSize="@dimen/font_size"
        />
</LinearLayout>