<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/list_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/select_list_top">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로"
            android:id="@+id/buttonBack"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:src="@drawable/button_back"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_alignParentEnd="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지우개 설정"
            android:layout_centerHorizontal="true"
            android:textColor="@color/White"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="@+id/buttonBack"
            android:textSize="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@null">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/pen_stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="두께"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:layout_margin="10dp"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/pen_stroke"
                android:layout_centerVertical="true"
                android:background="@drawable/stroke_circle"
                android:id="@+id/imageView3"
                android:backgroundTint="@color/White"
                android:layout_marginLeft="10dp"
                />

            <SeekBar
                android:id="@+id/eraserSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumb="@drawable/seekbar_button"
                android:progressBackgroundTint="@color/White"
                android:layout_gravity="center"
                android:max="50"
                android:indeterminate="false"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/stroke_circle"
                android:id="@+id/imageView4"
                android:backgroundTint="@color/White"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp" />

        </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffffff">
    </LinearLayout>
